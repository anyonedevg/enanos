<div class="container">

  <h5 class="display-5">Publica un anuncio</h5>
  {{#if user}}
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-info mb-5" data-toggle="modal" data-target="#exampleModal">
    Publicar anuncio
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Inserta tu anuncio</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/announces/add-announce/{{user._id}}" method="POST" enctype="multipart/form-data">

            <div class="form-group">
              <label><strong>Nombre de la mascota</strong></label>
              <input type="text" name="pet_name" placeholder="Ingresa el nombre de tu mascota" class="form-control"
                autofocus>
            </div>

            <div class="form-group">
              <label><strong>Foto de la mascota</strong></label>
              <div class="input-group">
                <div class="custom-file">
                  <input type="file" name="image" class="custom-file-input inputGroupFile">
                  <label class="custom-file-label">Sube una foto de tu mascota</label>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label><strong>Fecha en que se perdió</strong></label>
              <input type="date" name="last_date" placeholder="Ingresa tu correo" class="form-control">
            </div>

            <div class="form-group">
              <label><strong>Lugar visto por última vez</strong></label>
              <input type="text" name="last_location" placeholder="Ingresa el lugar dónde lo viste por última vez"
                class="form-control">
            </div>

            <div class="form-group">
              <label><strong>Detalles</strong></label>
              <textarea name="details" placeholder="Ingresa algunos detalles extras" class="form-control"></textarea>
            </div>

            <div class="form-group mb-4">
              <label><strong>Número de contacto</strong></label>
              <input type="number" name="contact_number" placeholder="Ingresa un número para contactarte"
                class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">
              <i class="fas fa-plus-circle"></i> Insertar
            </button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times-circle"></i>
              Cancelar</button>
          </form>
        </div>

      </div>
    </div>
  </div>
  {{else}}
  <div class="card mb-5">
    <div class="card-body">
      <div class="card-text">
        <p><a href="/users/signup">Regístrate</a> o <a href="/users/login">Ingresa</a> y comparte tu opinión.</p>
      </div>
    </div>
  </div>
  {{/if}}



  {{#each announces}}
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="card-img-top p-3" src="{{image_url}}">
      </div>
      <div class="col-md-8 px-3">
        <div class="card-block p-3">
          <h4 class="card-title"><i class="fas fa-paw"></i> {{pet_name}}</h4>
          <p>Fecha en que se perdió: <strong>{{shortdate last_date}}</strong></p>
          <p>Lugar visto por última vez: <strong>{{last_location}}</strong></p>
          <p class="card-text">Detalles: <strong>{{details}}</strong></p>
          <p>Contacto: <strong>{{contact_number}}</strong></p>
          <p class="text-muted">
            <i class="fas fa-clock"></i> {{timeago timestamp}}
            <p>
              <a href="#" class="btn btn-primary">Lo he visto</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}







</div>