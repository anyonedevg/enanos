<div class="container-fluid">
  <div class="row">

    <div class="col col-md-3">

      <div class="card">
        <img src="{{vet.image_url}}" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">{{vet.vet_id.name}}</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><i class="fas fa-location-arrow"></i> {{vet.vet_id.address}}</li>
        </ul>
        <div class="card-body">
          <a href="#" class="card-link"><i class="fas fa-star"></i> {{vet.vet_id.likes}}</a>
