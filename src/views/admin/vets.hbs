<div class="container">

  <div class="row justify-content-center">
    <div class="col col-md-6">

      <table class="table table-hover table-light table-bordered">

        <thead class="thead-dark">
          <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Acciones</th>
          </tr>
        </thead>

        <tbody>
          {{#each vets}}
          <tr>

            <td>{{vet_id.name}}</td>
            <td>
              <a href="{{image_url}}" class="btn" target="_blank"><i class="fas fa-eye"></i></a>
              <a href="/admin/delete-vet/{{vet_id._id}}" class="btn"><i class="fas fa-trash-alt"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
  </div>
</div>